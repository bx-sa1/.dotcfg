#!/bin/sh

rule() {
    bspc rule -a "$@" 
}

config() {
    bspc config "$@" 
}

##########
#COMMANDS#
##########
xsetroot -cursor_name left_ptr

#######
#RULES#
#######
rule kitty                      state=floating
rule feh                        state=fullscreen
rule Lutris                     state=floating
rule Luakit                     focus=on follow=on state=tiled desktop='^1'#next.!occupied
rule iwgtk                      state=floating
########
#CONFIG#
########
bspc monitor -d 1 2 3 4 5 6 7 8 9


config border_width             1   
config window_gap               10  
config split_ratio              0.5

config borderless_monocle       true
config gapless_monocle          true
config top_padding              10  
config bottom_padding           10  
config left_padding             10  
config right_padding            10  
config focus_follows_pointer    true

config ignore_ewmh_focus        true

###########
#AUTOSTART#
###########
$HOME/.fehbg
$HOME/.config/bspwm/autostart.sh

